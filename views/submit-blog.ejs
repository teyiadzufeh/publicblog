<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Submit Your Name</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead">Share your details abeg. Thank you. You'll get a reply asap</p>
    </div>
</div>

<div class="row justify-content-center">

    <%%>
        <%   if(infoSubmitObj != '') { %>
        <div class="col-8 alert alert-success" role="alert">
            <%= infoSubmitObj %>
            </div>
        </div>
    <%}%>

    <div class="col-8">


        <form action="/submit-blog" enctype="multipart/form-data" method="post">

            <div class="row g-3">

                <div class="col-12">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" id="email" class="form-control">
                </div>
                <div class="col-12">
                    <label for="name" class="form-label">Recipe Name</label>
                    <input type="text" name="name" id="name" class="form-control">
                </div>
                <div class="col-12">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="description" id="description" cols="30" rows="4" class="form-control"></textarea>
                </div>
                <div class="col-12">
                    <button type="button" class="btn btn-outline-primary" id="">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>